      "description": "List of locations to search in",
      "editor": "json",
      "prefill": [
        {"code": "75"}
      ]
    },
    "filter_square_min": {
      "title": "Surface minimum (m²)",
      "type": "integer",
      "description": "Pour immobilier : surface habitable minimum",
      "editor": "number",
      "minimum": 0
    },
    "filter_square_max": {
      "title": "Surface maximum (m²)",
      "type": "integer",
      "description": "Pour immobilier : surface habitable maximum",
      "editor": "number",
      "minimum": 0
