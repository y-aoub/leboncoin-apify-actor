    "max_pages": {
      "title": "Max Pages",
      "type": "integer",
      "description": "Maximum number of pages to scrape (0 = unlimited)",
      "editor": "number",
      "default": 10,
      "minimum": 0
    },
    "limit_per_page": {
      "title": "Results Per Page",
      "type": "integer",
      "description": "Number of results per page",
      "editor": "number",
      "default": 35,
      "minimum": 1,
      "maximum": 35
    },
    "delay_between_pages": {
      "title": "Delay Between Pages (seconds)",
      "type": "number",
      "description": "Delay in seconds between page requests",
      "editor": "number",
      "default": 1,
      "minimum": 0.5,
      "maximum": 10
    },
    "delay_between_locations": {
      "title": "Delay Between Locations (seconds)",
      "type": "number",
      "description": "Delay in seconds between different locations",
      "editor": "number",
      "default": 2,
      "minimum": 0.5,
      "maximum": 20
    },
    "max_age_days": {
      "title": "Max Age (days)",
      "type": "number",
      "description": "Maximum age of ads in days (0 = disabled)",
      "editor": "number",
      "default": 0,
      "minimum": 0
    },
    "consecutive_old_limit": {
      "title": "Consecutive Old Ads Limit",
      "type": "integer",
      "description": "Stop after finding this many consecutive old ads",
      "editor": "number",
      "default": 5,
      "minimum": 1
    },
    "search_in_title_only": {
      "title": "Search in Title Only",
      "type": "boolean",
      "description": "Only search in ad titles",
      "editor": "checkbox",
      "default": false
    },
    "output_format": {
      "title": "Output Format",
      "type": "string",
      "description": "Format of the output data",
      "editor": "select",
      "default": "detailed",
      "enum": ["detailed", "compact"],
      "enumTitles": ["Detailed (all fields)", "Compact (essential fields only)"]
    },
    "proxyConfiguration": {
      "title": "Proxy configuration",
      "type": "object",
      "description": "Select proxies to use. Use Apify Proxy (Residential recommended for best results) or custom proxy servers.",
      "editor": "proxy",
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"],
        "apifyProxyCountry": "FR"
      }
    },
    "verbose": {
      "title": "Verbose Logging",
      "type": "boolean",
      "description": "Enable detailed logging",
      "editor": "checkbox",
      "default": true
    }
